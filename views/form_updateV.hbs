                <option>Recuperado</option>
            </select>
        </div>
        <div class="col-md-6">
            <label for="local" class="form-label">Local do s13</label>
            <input type="text" value="{{dadoV.local}}" class="form-control text-primary" id="local" name="local">
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Alterar</button>
        </div>
